{
  "name": "neuron",
  "version": "1.0.0",
  "private": true,
  "description": "Image-to-Code AI Application - Monorepo",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "dev:web": "npm run dev --workspace=@neuron/web",
    "dev:api": "npm run dev --workspace=@neuron/api",
    "build:web": "npm run build --workspace=@neuron/web",
    "build:api": "npm run build --workspace=@neuron/api",
    "visual-check": "node ./scripts/run_visual_check.js"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "npm@10.2.0"
}
